<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Students</title>
    <link href="/styles/main.css" rel="stylesheet" type="text/css">
</head>

<body>
    <div class="container">
        <header>
            <h1>Manage Students</h1>
        </header>

        <nav>
            <ul>
                <li><a href="#" class="button" onclick="showInsertForm()">Insert Data</a></li>
                <li><a href="#" class="button" onclick="showDeleteForm()">Delete Data</a></li>
                <li><a href="#" class="button" onclick="showModifyForm()">Modify Data</a></li>
                <li><a href="#" class="button" onclick="showRetrieveForm()">Retrieve Data</a></li>
            </ul>
        </nav>

        <div id="insertForm" class="form-container" style="display: none;">
            <h2>Insert Student Data</h2>
            <form action="/students/insert" method="POST">
                <label for="studentid">ID:</label>
                <input type="number" id="studentid" name="studentid" required><br><br>
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required><br><br>
                <label for="department">Department:</label>
                <input type="text" id="department" name="department" required><br><br>
                <label for="batchnumber">Batch Number:</label>
                <input type="number" id="batchnumber" name="batchnumber" required><br><br>
                <button type="submit">Submit</button>
            </form>
        </div>

        <div id="deleteForm" class="form-container" style="display: none;">
            <h2>Delete Student Data</h2>
            <form action="/students/delete" method="POST">
                <label for="studentid">ID:</label>
                <input type="number" id="studentid" name="studentid" required><br>
                <button type="submit">Delete</button>
            </form>
        </div>

        <div id="modifyForm" class="form-container" style="display: none;">
            <h2>Modify Student Data</h2>
            <form action="/students/modify" method="POST">
                <label for="studentid">ID:</label>
                <input type="number" id="studentid" name="studentid" required><br><br>
                <label for="name">Name:</label>
                <input type="text" id="name" name="name"><br><br>
                <label for="department">Department:</label>
                <input type="text" id="department" name="department"><br><br>
                <label for="batchnumber">Batch Number:</label>
                <input type="number" id="batchnumber" name="batchnumber" required><br><br>
                <button type="submit">Modify</button>
            </form>
        </div>

        <div id="retrieveForm" class="form-container" style="display: none;">
            <h2>Retrieve Student Data</h2>
            <form action="/students/retrieve" method="POST">
                <label for="studentid">ID:</label>
                <input type="number" id="studentid" name="studentid" required><br><br>
                <button type="submit">Retrieve</button>
            </form>
            <br>
            <form action="/students/retrieveAll" method="GET">
                <button type="submit">Retrieve All Data</button>
            </form>
        </div>
    </div>

    <script>
        function showInsertForm() {
            hideAllForms();
            document.getElementById('insertForm').style.display = 'block';
            alignButtonsHorizontally();
        }

        function showDeleteForm() {
            hideAllForms();
            document.getElementById('deleteForm').style.display = 'block';
            alignButtonsHorizontally();
        }

        function showModifyForm() {
            hideAllForms();
            document.getElementById('modifyForm').style.display = 'block';
            alignButtonsHorizontally();
        }

        function showRetrieveForm() {
            hideAllForms();
            document.getElementById('retrieveForm').style.display = 'block';
            alignButtonsHorizontally();
        }

        function hideAllForms() {
            var forms = document.getElementsByClassName('form-container');
            for (var i = 0; i < forms.length; i++) {
                forms[i].style.display = 'none';
            }
            alignButtonsHorizontally();
        }
        function alignButtonsHorizontally() {
            var nav = document.querySelector('nav ul');
            nav.style.display = 'flex';
            nav.style.flexDirection = 'row';
        }
    </script>
</body>

</html>