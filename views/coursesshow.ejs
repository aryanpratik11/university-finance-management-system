<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Management</title>
    <link href="/styles/main.css" rel="stylesheet" type="text/css">
</head>

<body>
    <div class="container">
        <header>
            <h1>Course Management</h1>
        </header>

        <table>
            <thead>
                <tr>
                    <th>Course ID</th>
                    <th>Course Name</th>
                    <th>Department</th>
                    <th>Credits</th>
                </tr>
            </thead>
            <tbody>
                <% courses.forEach(course=> { %>
                    <tr>
                        <td>
                            <%= course.courseid %>
                        </td>
                        <td>
                            <%= course.coursename %>
                        </td>
                        <td>
                            <%= course.department %>
                        </td>
                        <td>
                            <%= course.credits %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
</body>

</html>